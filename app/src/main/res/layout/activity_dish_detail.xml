<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bottom_main_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/rounded_background">

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing=".1"
            android:paddingVertical="30dp"
            android:text="Dish Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/dish_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing=".1"
                android:paddingVertical="30dp"
                android:layout_marginLeft="5dp"
                android:text="kcal"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dish_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing=".1"
                android:paddingVertical="30dp"
                android:layout_marginLeft="150dp"
                android:text="p"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dish_carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing=".1"
                android:paddingVertical="30dp"
                android:layout_marginLeft="200dp"
                android:text="c"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dish_fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing=".1"
                android:paddingVertical="30dp"
                android:layout_marginLeft="250dp"
                android:text="f"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="70dp"
                android:background="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="160dp"
                android:layout_alignParentBottom="true"
                android:text="Napisz komentarz"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="50dp"
                android:background="@color/dark2"
                android:hint="bla - bla - bla"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingBottom="55dp"
                android:layout_alignParentBottom="true"
                android:textColorHint="@color/grey"
                android:textSize="12dp" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:text="OK"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/goback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="145dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/ic_goback"
        android:background="#00ffffff"/>

    <RelativeLayout
        android:id="@+id/menu_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/ic_home"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginBottom="12dp"
            android:text="Home"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/categories_btn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_menu"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:text="Categories"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/logout_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="12dp"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>