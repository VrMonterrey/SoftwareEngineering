<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bottom_main_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:text="Komentarz"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


            <ListView
                android:id="@+id/commentsListView"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <EditText
                    android:id="@+id/commentEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Wpisz komentarz..."
                    android:padding="8dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/addCommentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="DodaÄ‡"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="7dp"
                android:text="Ocena:"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/ratingSpinner"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext"
                android:entries="@array/ratings"
                android:padding="14dp"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/goback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="175dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/ic_goback"
        android:background="#00ffffff"/>

    <RelativeLayout
        android:id="@+id/menu_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/ic_home"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginBottom="12dp"
            android:text="Home"
            android:textColor="@color/grey"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/categories_btn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_menu"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:text="Categories"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/logout_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="65dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/grey" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="12dp"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>